<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Redirecting...</title>
  <script>
    const urlParams = new URLSearchParams(window.location.search);
    const orderID = urlParams.get("token"); // PayPal sends order ID as 'token'
    if (orderID) {
      window.location.href = `linkfix://paypal?opType=payment&orderID=${orderID}`;
    } else {
      document.body.innerHTML = "<p>Missing order ID. Please try again.</p>";
    }
  </script>
</head>
<body>
  <p>Redirecting back to LinkFix app...</p>
</body>
</html>
